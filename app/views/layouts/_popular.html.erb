<html>
<body>
    <section class="contact">
        <div class="contact__container container">
            <div class="row">
                <div class="col col-6-md">
                    <div class="contact__text">
                        <h1>Popular Products</h1>

                        <table class="catalog">
                            <% @products.limit(2).order(:id).each do |product| %>
                            <tr>
                                <td>
                                    <div class="image">
                                        <%= link_to (image_tag product.image_url, :style => "height:100px"), product %>
                                    </div>
                                    <div class="title">
                                        <%= link_to product.title, product %>
                                    </div>
                                    <div class="description">
                                        <%= product.description %>
                                    </div>
                                    <div class="price">
                                        <%= number_to_currency(product.price, :unit => "â‚¬") %>
                                    </div>
                                    <div class="links">
                                        <% if session[:login] ==1 %>
                                        <%= link_to 'Edit', edit_product_path(product) %>
                                        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                                        <%else%>

                                        <a href="/cart/<%= product.id %>">Add to Cart</a>
                                        <%end%>
                                    </div>
                                </td>
                            </tr>
                            <% end %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>