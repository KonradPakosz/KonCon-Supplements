<html>

<body>
    <section class="contact">
        <div class="contact__container container">
            <div class="row">
                <div class="col col-6-md">
                    <div class="contact__text">
                        <div>
                            <h1>Categories</h1>
                            <br>
                            <table>
                                <% @categories.each do |category| %>
                                <td class="producthols">
                                    <p><%= category.title %></p>
                                    <%= link_to (image_tag category.image, :class=>"productholsIm", :style =>"height:100px"), category %>
                                    <p><%= category.description %></p>
                                    <p><a href="/category/<%= category.title %>"
                                            class="button"><%= category.title %></a>
                                    </p>
                                </td>
                                <% end %>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>
